<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TODO: Add scrolling support -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/step1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/catLeft"
                android:layout_marginLeft="@dimen/catLeft"
                android:layout_marginEnd="@dimen/catMiddle"
                android:layout_marginRight="@dimen/catMiddle"
                android:layout_weight=".7"
                android:gravity="center"
                android:text="@string/category_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/catRight"
                android:layout_marginRight="@dimen/catRight"
                android:layout_weight=".3"
                android:gravity="center"
                android:text="@string/percent_grade"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCategory0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/catLeft"
                android:layout_marginLeft="@dimen/catLeft"
                android:layout_marginEnd="@dimen/catMiddle"
                android:layout_marginRight="@dimen/catMiddle"
                android:layout_weight=".7"
                android:ems="10"
                android:hint="@string/category"
                android:importantForAutofill="no"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editTextWeight0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/catRight"
                android:layout_marginRight="@dimen/catRight"
                android:layout_weight=".3"
                android:ems="10"
                android:hint="@string/percent"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:singleLine="true" />

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/catLeft"
            android:layout_marginLeft="@dimen/catLeft"
            android:onClick="addCategory"
            android:text="@string/add_another" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="createGrades"
                android:text="@string/next_step" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>